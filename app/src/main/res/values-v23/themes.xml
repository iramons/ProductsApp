<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ProductsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorRedDark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
    </style>

    <!-- Theme NO ActionBar -->
    <style name="Theme.ProductsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProductsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ProductsApp.PopupOverlay" parent="Theme.AppCompat" />

    <style name="TitleBarTextColor" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- cardView styles-->
    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/card_view_margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/card_view_outside_marginHorizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <!-- TextView Section Item title style -->
    <style name="List.Section.TextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_very_small_margin</item>
        <item name="android:paddingTop">@dimen/spacing_xmedium</item>
    </style>


</resources>